{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annuler une sortie</h1>
    <ul>
        <li>Nom de la sortie : {{ sortie.nom }}</li>
        <li>Date de la sortie : {{ sortie.dateHeureDebut | date('d-m-Y') }}</li>
        <li>{{ sortie.site.nom }}</li>
        <li>{{ sortie.lieu.nom }}</li>
    </ul>
    <form action="">
        <input type="text" hidden value="{{ sortie.id }}">
        <label for="motif">Motif d'annulation</label>
        <textarea name="motif" id="motif" placeholder="Motif d'annulation" cols="20" rows="2"></textarea>
    </form>
    <button class="btn">{{ button_label | default('Enregistrer') }}</button>
{% endblock %}
