{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <div class="forms">
        <h1>Sortie index</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date - Heure</th>
                <th>Duree</th>
                <th>Date limite d'inscription</th>
                <th>Nb Max</th>
                <th>Infos Sortie</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr>
                    <td>{{ sortie.id }}</td>
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ sortie.duree }}</td>
                    <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ sortie.nbInscriptionsMax }}</td>
                    <td>{{ sortie.infosSortie }}</td>
                    <td>{{ sortie.etat }}</td>
                    <td>
                        <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">details</a><br>
                        <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">Ã©diter</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_sortie_new') }}">Create new</a>
    </div>
{% endblock %}
