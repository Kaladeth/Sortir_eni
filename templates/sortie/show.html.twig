{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <h1>Sortie</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ sortie.nom }}</td>
        </tr>
        <tr>
            <th>Date et heure de début</th>
            <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Durée</th>
            <td>{{ sortie.duree }}</td>
        </tr>
        <tr>
            <th>Date limite d'inscription</th>
            <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Nombre max d'inscrits</th>
            <td>{{ sortie.nbInscriptionsMax }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ sortie.infosSortie }}</td>
        </tr>
        <tr>
            <th>Etat</th>
            <td>{{ sortie.etatSortie.libelle }}</td>
        </tr>
        </tbody>
    </table>
    <h2>Participants</h2>
    <table class="table table-striped">

        {% for part in participant %}
            <tr>
                <td><a href="{{ path('app_participant_show', {'id': part.id}) }}">{{ part.nom }}</a></td>
                <td><a href="{{ path('app_participant_show', {'id': part.id}) }}">{{ part.prenom }}</a></td>
            </tr>

        {% endfor %}
    </table>


    <a href="{{ path('app_sortie_index') }}">back to list</a>

    <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">edit</a>

    {{ include('sortie/_delete_form.html.twig') }}
{% endblock %}
