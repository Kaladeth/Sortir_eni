{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <main id="participants">
        <div class="container-fluid">
            <div class="forms">
                <h1>Participant index</h1>
                <table class="table">
                    <thead>
                    <tr>
                        {#                        <th>image</th>#}
                        <th>Id</th>
                        <th>Email</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Telephone</th>
                        <th>Actif</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for participant in participants %}
                        <tr>
                            {#                            <td>#}
                            {#                                <img class="card-img-participant-index"#}
                            {#                                     src="{{ asset('/img/uploads/' ~ participant.getImageName()) }}"#}
                            {#                                     alt="pouet">#}
                            {#                            </td>#}
                            <td>{{ participant.id }}</td>
                            <td>{{ participant.email }}</td>
                            <td>{{ participant.nom }}</td>
                            <td>{{ participant.prenom }}</td>
                            <td>{{ participant.telephone }}</td>
                            <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                            <td>
                                <a href="{{ path('app_participant_show', {'id': participant.id}) }}">Details</a><br>
                                {% if app.user.id is same as participant.id %}
                                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">Editer</a>
                                {% endif %}
                            </td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

{% endblock %}
