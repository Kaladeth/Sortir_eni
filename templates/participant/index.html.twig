{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <main id="participants">
        <div class="container-fluid">
            <div class="forms row my-5 text-center">
                <h1 id="titre-participants">Liste des participants</h1>
            </div>
            <table class="table">
                <thead>
                <tr>
                    {#                        <th>image</th>#}
                    <th>Email</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Telephone</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in participants %}
                    <tr>
                        <td>{{ participant.email }}</td>
                        <td>{{ participant.nom }}</td>
                        <td>{{ participant.prenom }}</td>
                        <td>{{ participant.telephone }}</td>
                        <td>
                            <a href="{{ path('app_participant_show', {'id': participant.id}) }}">Details</a><br>
                            {% if app.user.id is same as participant.id %}
                                <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">Editer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
    </main>

{% endblock %}
