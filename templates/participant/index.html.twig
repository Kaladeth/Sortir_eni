{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <div class="forms">
        <h1>Participant index</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Actif</th>
                <th>actions</th>
                <th>image</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                    <td>{{ participant.id }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.nom }}</td>
                    <td>{{ participant.prenom }}</td>
                    <td>{{ participant.telephone }}</td>
                    <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('app_participant_show', {'id': participant.id}) }}">Details</a><br>
                        <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">Editer</a>
                    </td>
                    <td>
                        <img src="{{ asset('/img/uploads/' ~ participant.getImageName()) }}" alt="pouet">
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_participant_new') }}">Create new</a>
{% endblock %}
