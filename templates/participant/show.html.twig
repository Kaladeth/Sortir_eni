{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}

    <main id="show-participant">
        <div class="container mt-5">

            <h1 class="d-flex justify-content-center my-3" id="h1_participant">Votre profil</h1>

            <div class="row d-flex justify-content-center">
                <div class="card" id="carte_part">
                    <img src="{{ asset('/img/uploads/' ~ participant.getImageName()) }}"
                         class="card-img-participant mx-auto mt-5" alt="img_profil">
                    <div class="card-body align-self-center mt-1">
                        <hr>
                        <p><b>{{ participant.nom }} {{ participant.prenom }}</b></p>
                        <p>{{ participant.email }}</p>
                        <p>{{ participant.telephone }}</p>
                    </div>
                </div>
            </div>

            {#                <img src="{{ asset('/img/uploads/' ~ participant.getImageName()) }}" alt="img_profil">#}
            {% if app.user.id == participant.id %}
                <div class="d-flex justify-content-center mt-4">
                    <a class="btn btn-success"  href="{{ path('app_participant_edit', {'id': participant.id}) }}">Modifier mon profil</a>
                </div>
            {% endif %}
        </div>
    </main>
{% endblock %}
