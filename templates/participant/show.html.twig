{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <main id="gerer_profil">
        <div class="container-fluid mx-0 px-0">
            <div class="forms px-0 mx-0">
                <h1>Participant</h1>
                <div>
                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            <div class="card" id="carte_part" style="width: 100%;">
                                <img src="{{ asset('/img/uploads/' ~ participant.getImageName()) }}" class="card-img-top" alt="img_profil">
                                <div class="card-body">
                                    <p>{{ participant.nom }}</p>
                                    <p>{{ participant.prenom }}</p>
                                    <p>{{ participant.email }}</p>
                                    <p>{{ participant.telephone }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {#                <img src="{{ asset('/img/uploads/' ~ participant.getImageName()) }}" alt="img_profil">#}
                {% if app.user.id == participant.id %}
                    <a class="btn btn-primary" href="{{ path('app_participant_edit', {'id': participant.id}) }}">Modifier mon profil</a>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
